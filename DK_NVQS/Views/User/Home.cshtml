@{
    ViewBag.Title = "Đăng ký Nghĩa vụ Quân sự trực tuyến";
    Layout = "~/Views/Shared/UserLayout.cshtml";

}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .navbar {
            background-color: #f8f9fa;
            padding: 10px 0;
        }

            .navbar a {
                color: #333;
                padding: 14px 20px;
                text-decoration: none;
                display: inline-block;
            }

        .search-bar {
            margin: 20px 0;
        }

        .service-buttons {
            display: flex;
            justify-content: center;
            gap: 10px;
        }

            .service-buttons a {
                margin-top: 2px;
                background-color: #ffcc00;
                padding: 10px 20px;
                color: #333;
                text-decoration: none;
                border-radius: 5px;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="service-buttons">
            <a href="#">Dịch vụ công trực tuyến</a>
            <a href="#">Kết quả đánh giá Bộ chỉ số phục vụ người dân và doanh nghiệp của bộ, ngành, địa phương</a>
            <a href="#">Dịch vụ công liên thông: Khai sinh, Khai tử</a>
        </div>
    </div>
</body>
</html>
