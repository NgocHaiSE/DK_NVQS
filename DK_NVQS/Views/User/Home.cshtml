@{
    ViewBag.Title = "Đăng ký Nghĩa vụ Quân sự trực tuyến";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .navbar {
            background-color: #f8f9fa;
            padding: 10px 0;
        }

            .navbar a {
                color: #333;
                padding: 14px 20px;
                text-decoration: none;
                display: inline-block;
            }

                .navbar a:hover {
                    background-color: #ddd;
                }

        .search-bar {
            margin: 20px 0;
        }

        .service-buttons {
            display: flex;
            justify-content: center;
            gap: 10px;
        }

            .service-buttons a {
                background-color: #ffcc00;
                padding: 10px 20px;
                color: #333;
                text-decoration: none;
                border-radius: 5px;
            }

                .service-buttons a:hover {
                    background-color: #ff9900;
                }

    </style>
</head>
<body>
    <div class="container">
        <nav class="navbar">
            <a href="#">Giới thiệu</a>
            <a href="#">Thông tin đăng ký NVQS 2024</a>
            <a href="#">Đăng ký trực tuyến</a>
            <a href="#">Phản ánh kiến nghị</a>
            <a href="#">Thủ tục hành chính</a>
            <a href="#">Hỗ trợ</a>
        </nav>
        <div class="service-buttons">
            <a href="#">Dịch vụ công trực tuyến</a>
            <a href="#">Kết quả đánh giá Bộ chỉ số phục vụ người dân và doanh nghiệp của bộ, ngành, địa phương</a>
            <a href="#">Dịch vụ công liên thông: Khai sinh, Khai tử</a>
        </div>
    </div>
</body>
</html>
