@{
    Layout = "~/Views/Shared/UserLayout.cshtml";
}


@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success">@Model.SuccessMessage</div>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quét mã CCCD</title>
</head>
<body>
    <style>
        #registrationForm {
            margin-top: 30px;
        }

            #registrationForm > div {
                margin-bottom: 10px;
            }

        .container {
            width: 500px;
            margin: auto;
        }

            .container > h1 {
                margin-top: 10px;
                text-align: center;
            }

            .container label {
                text-align: left;
                display: inline-block;
                width: 100px; /* Adjust as needed */
                margin-right: 10px; /* Add some spacing between label and input */
            }

            .container input[type="text"] {
                width: calc(100% - 170px); /* Adjust as needed */
            }

        button[type="submit"] {
            margin-left: 160px; /* Match label width for consistency */
        }
    </style>
    <div id="qr_result"></div>
    <div class="container">
        <h1>Quét mã CCCD</h1>
        <div style="display: flex; justify-content: center;">
            <div id="qr_reader" style="width: 500px;"></div>
        </div>
        <form id="registrationForm" action="/User/Register" method="post">
            <div>
                <label for="citizenID">Số CCCD:</label>
                <input type="text" id="citizenID" name="citizenID" required />
            </div>
            <div>
                <label for="fullName">Họ tên:</label>
                <input type="text" id="fullName" name="fullName" required />
            </div>
            <div>
                <label for="birthDate">Birth Date:</label>
                <input type="text" id="birthDate" name="birthDate" required />
            </div>
            <div>
                <label for="gender">Giới tính:</label>
                <input type="text" id="gender" name="gender" required />
            </div>
            <div>
                <label for="address">Địa chỉ:</label>
                <input type="text" id="address" name="address" required />
            </div>
            <div>
                <label for="issueDate">Ngày cấp:</label>
                <input type="text" id="issueDate" name="issueDate" required />
            </div>
            <button type="submit">Submit</button>
        </form>
    </div>
    <script src="https://unpkg.com/html5-qrcode"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var lastResult, countResults = 0;

            function onScanSuccess(decodedText, decodedResult) {
                if (decodedText !== lastResult) {
                    countResults++;
                    lastResult = decodedText;
                    //alert("Result: " + decodedText);

                    var parts = decodedText.split('|');
                    if (parts.length === 7) {
                        document.getElementById('citizenID').value = parts[0];
                        document.getElementById('fullName').value = parts[2];
                        document.getElementById('birthDate').value = parts[3];
                        document.getElementById('gender').value = parts[4];
                        document.getElementById('address').value = parts[5];
                        document.getElementById('issueDate').value = parts[6];
                    }
                }
            }

            function onScanFailure(error) {
                console.warn(`QR error = ${error}`);
            }

            var htmlScanner = new Html5QrcodeScanner("qr_reader", { fps: 10, qrbox: 250 });
            htmlScanner.render(onScanSuccess, onScanFailure);
        });
    </script>
</body>
</html>

